{
  "compilerOptions": {
    "baseUrl": ".",
    // use path alias with vscode debug feature: https://www.npmjs.com/package/tsconfig-paths
    "paths": {
      "auction-shared/*": [
        "../auction-shared/*"
      ],
      "@/*": [
        "./*"
      ],
    },
    "module": "commonjs",
    "target": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules/"
  ],
  "emitDecoratorMetadata": true,
  "experimentalDecorators": true,
}